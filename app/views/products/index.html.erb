<h2>All Products</h2>

<table>
  <tr>
    <th>Product name</th>
    <th>Credit value</th>
    <th>Already created</th>
    <th></th>
    <th></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.credit_value%></td>
      <td></td>
      <td><%= link_to "Edit", edit_product_path(product) %></td>
      <td>Delete</td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add new product", new_product_path %></p>